<%- include('../../shared/includes/head',{pageTitle: 'Add New Products'}) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Add New Products!</h1>
        <form action="/admin/products?_csrf=<%=locals.csrfToken %>" method="POST" enctype="multipart/form-data">
            <p>
                <label for="title">Title</label>
                <input type="text" id="title" class="title" required>
            </p>
            <p>
                <label for="image">Image</label>
                <input type="file" id="image" class="image" accept="image/jpg">
            </p>
            <p>
                <label for="summary">Summary</label>
                <input type="text" id="summary" class="summary" required maxlength="150" >
            </p>
            <p>
                <label for="price">Price</label>
                <input type="number" id="price" class="price" min="10" step="10" required>
            </p>
            <p>
                <label for="description">Description</label>
                <textarea id="description" class="description" rows="5" required></textarea>
            </p>
            <p>
                <button type="reset" class="btn btn-alt">Reset</button>
                <button class="btn">Save</button>
            </p>
        </form>
    </main>
<%- include('../../shared/includes/footer') %>    
    
